<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4sp"
    android:background="@drawable/gradient_anim">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:padding="8sp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_back"
            android:background="@drawable/back_button_effect"
            android:id="@+id/go_back"
            android:layout_margin="8sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Room"
            android:textStyle="bold"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:src="@drawable/ic_baseline_home_24"
            android:background="@drawable/ticket_number_undone_effect"
            android:layout_centerVertical="true"
            android:id="@+id/go_home"
            android:layout_margin="8sp"
            android:padding="12sp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_bar"
        android:layout_above="@id/done"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Room Name:"
            android:padding="8sp"
            android:layout_above="@id/empty_space_horizontal"
            android:layout_toStartOf="@id/empty_space_vertical"
            android:gravity="center" />

        <!--        <View-->
        <!--            android:layout_width="52sp"-->
        <!--            android:layout_height="0sp" />-->

        <EditText
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:id="@+id/room_name_edit"
            android:hint="(Max. 20 characters)"
            android:maxLines="1"
            android:maxLength="20"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:gravity="bottom|start"
            android:textColorHint="#bdbdbd"
            android:textColor="#fafafa"

            android:textAppearance="?android:textAppearanceMedium"
            android:layout_above="@id/empty_space_horizontal"
            android:layout_toEndOf="@id/empty_space_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16sp"
            android:id="@+id/empty_space_horizontal"
            android:layout_centerInParent="true" />

        <View
            android:layout_width="52sp"
            android:layout_height="match_parent"
            android:id="@+id/empty_space_vertical"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Password:"
            android:padding="8sp"
            android:layout_below="@id/empty_space_horizontal"
            android:layout_toStartOf="@id/empty_space_vertical" />

        <!--        <View-->
        <!--            android:layout_width="52sp"-->
        <!--            android:layout_height="0sp"/>-->

        <EditText
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:id="@+id/room_pass_edit"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:hint="(Exactly 4 characters)"
            android:maxLines="1"
            android:maxLength="4"
            android:gravity="top|start"
            android:textColorHint="#bdbdbd"
            android:textColor="#fafafa"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_below="@id/empty_space_horizontal"
            android:layout_toEndOf="@id/empty_space_vertical" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4sp"
        android:background="@drawable/blank_button"
        android:layout_below="@+id/header"
        android:id="@+id/head_bar"
        android:layout_margin="8sp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done"
        android:text="DONE"
        app:icon="@drawable/ic_baseline_check_24"
        android:layout_margin="8sp"
        android:src="@drawable/ic_baseline_check_24"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>